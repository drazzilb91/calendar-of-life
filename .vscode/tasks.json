{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "install",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: install",
			"detail": "install dependencies from package"
		},
		{
			"label": "firebase: deploy",
			"type": "shell",
			"command": "firebase deploy",
			"windows": {
				"command": "firebase deploy"
			},
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Run VITE",
			"type": "shell",
			"command": "npx vite",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new",
				"close": true
			},
			"options": {
				"cwd": "${workspaceFolder}\\public"
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "javascript",
				"fileLocation": [
					"relative",
					"${workspaceFolder}\\public"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^VITE.+ready",
					"endsPattern": "^.+Local:"
				}
			}
		},
		{
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "npm: build",
			"detail": "vite build"
		}
	]
}