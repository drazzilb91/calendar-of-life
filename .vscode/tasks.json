{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "install",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "npm: install",
			"detail": "install dependencies from package"
		},
		{
			"label": "firebase: deploy",
			"type": "shell",
			"command": "firebase deploy",
			"windows": {
				"command": "firebase deploy"
			},
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Lite-server",
			"type": "shell",
			"command": "lite-server -c bs-config.json",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "javascript",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
				  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				  "file": 1,
				  "line": 2,
				  "column": 3,
				  "severity": 4,
				  "message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^(.+)Reloading Browsers\\.+",
					"endsPattern": "^(.+)Watching files\\.+"
				}
        	}
		},
		{
		"label": "watch",
		"command": "tsc",
		"args": ["--watch"],
		"isBackground": true,
		"problemMatcher": {
			"owner": "typescript",
			"fileLocation": "relative",
			"pattern": {
			"regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
			"file": 1,
			"location": 2,
			"severity": 3,
			"code": 4,
			"message": 5
			},
			"background": {
			"activeOnStart": true,
			"beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
			"endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - Compilation complete\\. Watching for file changes\\."
			}
		}
		}
	]
}