{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "install",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "npm: install",
			"detail": "install dependencies from package"
		},
		{
			"label": "firebase: deploy",
			"type": "shell",
			"command": "firebase deploy",
			"windows": {
				"command": "firebase deploy"
			},
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Lite-server",
			"type": "shell",
			"command": "lite-server -c bs-config.json",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true
        }
	]
}